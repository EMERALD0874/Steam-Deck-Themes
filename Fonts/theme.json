{
  "name": "Fonts",
  "description": "This theme adds a variety of fonts and control over capitalization to the Steam Deck. Fonts used in any of my other themes as well as certain unique fonts are available through this theme. If you would like to add your own font, a CSS template is provided.",
  "author": "EMERALD#0874",
  "version": "v3.0",
  "manifest_version": 3,
  "inject": {},
  "target": "System-Wide",
  "patches": {
    "Font": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Android Insomnia": {
          "font-css/android-insomnia.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Bahnschrift": {
          "font-css/bahnschrift.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "DePixel Breit": {
          "font-css/depixel.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Fira Sans": {
          "font-css/fira-sans.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Josefin Sans": {
          "font-css/josefin-sans.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Lato": {
          "font-css/lato.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Montserrat": {
          "font-css/montserrat.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Optima Nova": {
          "font-css/optima-nova.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Roboto": {
          "font-css/roboto.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Custom Template": {
          "font-css/custom.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Text Transform": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Standard Case": {
          "case/standard-case.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Uppercase": {
          "case/uppercase.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    }
  }
}
