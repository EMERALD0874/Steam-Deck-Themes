{
  "name": "Fonts",
  "description": "This theme adds a variety of fonts and control over capitalization to the Steam Deck. Fonts used in any of my other themes as well as certain unique fonts are available through this theme. Additional fonts can be contributed through an issue on the GitHub repository.",
  "author": "EMERALD#0874",
  "version": "v2.0",
  "manifest_version": 3,
  "inject": {},
  "target": "System-Wide",
  "patches": {
    "Font": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Bahnschrift": {
          "font-css/bahnschrift.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Josefin Sans": {
          "font-css/josefin-sans.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Montserrat": {
          "font-css/montserrat.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Optima Nova": {
          "font-css/optima-nova.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Roboto": {
          "font-css/roboto.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Text Transform": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Standard Case": {
          "case/standard-case.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Uppercase": {
          "case/uppercase.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    }
  }
}
