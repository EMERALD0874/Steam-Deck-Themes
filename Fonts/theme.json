{
  "name": "Fonts",
  "description": "This theme adds a variety of fonts and control over capitalization to the Steam Deck. Atkinson Hyperlegible and OpenDyslexic are fonts designed to help readers with visual impairments and dyslexia respectively. If you would like to add your own font, a guide and template are available in ~/homebrew/themes/Fonts/font-css/custom.css. Please do not make PRs to my theme repository with additional fonts as they will not be considered. Thanks!",
  "author": "EMERALD0874",
  "version": "v3.3",
  "manifest_version": 3,
  "inject": {},
  "target": "System-Wide",
  "patches": {
    "Font": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Android Insomnia": {
          "font-css/android-insomnia.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Atkinson Hyperlegible": {
          "font-css/atkinson-hyperlegible.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Bahnschrift": {
          "font-css/bahnschrift.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "DePixel Breit": {
          "font-css/depixel.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Figtree": {
          "font-css/figtree.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Fira Sans": {
          "font-css/fira-sans.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Josefin Sans": {
          "font-css/josefin-sans.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Lato": {
          "font-css/lato.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Montserrat": {
          "font-css/montserrat.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "OpenDyslexic": {
          "font-css/opendyslexic.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Optima Nova": {
          "font-css/optima-nova.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Roboto": {
          "font-css/roboto.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Custom Template": {
          "font-css/custom.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    },
    "Text Transform": {
      "default": "None",
      "type": "dropdown",
      "values": {
        "None": {},
        "Standard Case": {
          "case/standard-case.css": ["SP", "MainMenu", "QuickAccess"]
        },
        "Uppercase": {
          "case/uppercase.css": ["SP", "MainMenu", "QuickAccess"]
        }
      }
    }
  }
}
